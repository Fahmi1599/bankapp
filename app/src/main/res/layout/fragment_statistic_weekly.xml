<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_card_rv"
        android:layout_width="match_parent"
        tools:listitem="@layout/list_monthly_card"
        tools:itemCount="1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textColor="@color/gray_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Rp 7.000.000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="@dimen/medium_margin"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_statistic">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/extra_small_margin"
            android:src="@drawable/ic_baseline_show_chart_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="1 September - 31 September"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginVertical="@dimen/small_margin"
            android:background="@drawable/button_radius_orange"
            android:weightSum="100.00"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@color/transparant"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/ll_percentage_current0"
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@drawable/button_radius_blue"
                android:orientation="horizontal" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginVertical="@dimen/small_margin"
            android:background="@drawable/button_radius_orange"
            android:weightSum="100.00"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@color/transparant"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_percentage_current1"
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@drawable/button_radius_blue"
                android:orientation="horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginVertical="@dimen/small_margin"
            android:background="@drawable/button_radius_orange"
            android:weightSum="100.00"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@color/transparant"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_percentage_current2"
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@drawable/button_radius_blue"
                android:orientation="horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginVertical="@dimen/small_margin"
            android:background="@drawable/button_radius_orange"
            android:weightSum="100.00"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@color/transparant"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_percentage_current3"
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="50"
                android:background="@drawable/button_radius_blue"
                android:orientation="horizontal" />

        </LinearLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/medium_margin"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_statistic"
            android:layout_marginRight="@dimen/extra_small_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/small_margin"
                android:src="@drawable/ic_baseline_album_24_accent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 %"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_margin"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_statistic"
            android:layout_marginStart="@dimen/extra_small_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/small_margin"
                android:src="@drawable/ic_baseline_album_24_primarydarl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 %"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_margin"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>